        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="511.0" prefWidth="640.0" style="-fx-background-color: #EAEBEE;" VBox.vgrow="ALWAYS">
            <children>
                <Pane layoutX="32.0" layoutY="19.0" prefHeight="366.0" prefWidth="575.0" style="-fx-background-color: white; -fx-background-radius: 30px;">
                    <children>
                        <Text layoutX="216.0" layoutY="178.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%lblNewPassword" />
                        <Text layoutX="215.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%lblChangePassword">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Text layoutX="213.0" layoutY="111.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%lblOldPassword" />
                        <PasswordField fx:id="oldPwd" layoutX="213.0" layoutY="127.0" />
                        <Text layoutX="215.0" layoutY="244.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%lblConfirmNewPassword" />
