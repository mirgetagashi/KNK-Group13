    <Label fx:id="studentNameLabel" text="Emri i Studentit" style="-fx-font-size: 16px; -fx-padding: 10;"/>

    <LineChart fx:id="gradesLineChart" prefHeight="200.0" prefWidth="600.0">
        <xAxis>
            <CategoryAxis label="Lëndët"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Notat"/>
        </yAxis>
    </LineChart>
    <PieChart fx:id="gradeChart" layoutX="176.0" layoutY="42.0" prefHeight="290.0" prefWidth="400.0" title="Grade Chart" />
</VBox>
